
@{ ViewData["Title"] = "List"; }

<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">Sınav Listesi</h5>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Yazı Başlığı</th>
                        <th>Sınav Tarihi</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
        <tr>
            <td>@item.QuesitonId</td>
            <td>@item.Description</td>
            <td>@item.CorrectAnswer</td>
            <td>
                <a class="btn btn-danger" asp-controller="AppUser" asp-action="Exam" asp-route-quizId="@item.QuesitonId">Sınava Gir</a>
            </td>
        </tr>}
                </tbody>
            </table>
        </div>
    </div>
</div>